<!DOCTYPE html>
<html>
  <head>
    <title>長野円盤堂</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header id="header" class="">
      <div class="" style="height: 150px; width:100%; background-color: #111; padding: 10px;">
        <h1><a href="/" style="color: white">長野円盤堂</a></h1>
        <ul class="navbar-nav nav">
          <% if current_customer == nil %>
          <li style="color: white"><%= link_to "ログイン", new_customer_session_path %></li>
          <li style="color: white"><%= link_to "会員登録", new_customer_registration_path %></li>
          <% else %>
          <li style="color: white"><%= link_to "カート", carts_index_path %></li>
          <li style="color: white"><%= link_to "マイページ", show_customer_path(current_customer.id) %></li>
          <li style="color: white"><%= link_to "ログアウト", destroy_customer_session_path, method: :delete %></li>
          <% end %>
          <li style="color: white"><%= link_to "管理者", admin_items_path %></li>
        </ul>
      </div>
    </header>
    <!-- /header -->
    <%= yield %>
  </body>
</html>
