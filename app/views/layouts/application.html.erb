<!DOCTYPE html>
<html>
  <head>
    <title>長野円盤堂</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header id="header" class="">
      <div class="" style="height: 100px; width:80%; margin:0 auto 50px; padding: 10px; border-bottom: solid 1px">
        <h1><a href="/">長野円盤堂</a></h1>
        <ul class="navbar-nav nav">
          <% if current_customer == nil %>
          <li style="color: white"><%= link_to "Log in", new_customer_session_path %></li>
          <li style="color: white"><%= link_to "Sign up", new_customer_registration_path %></li>
          <% else %>
          <li style="color: white"><%= link_to "Cart", carts_path %></li>
          <li style="color: white"><%= link_to "My page", show_customer_path(current_customer.id), date: {"turbolinks" => false} %></li>
          <li style="color: white"><%= link_to "Log out", destroy_customer_session_path, method: :delete %></li>
          <% end %>
          <li style="color: white"><%= link_to "Admin", admin_items_path %></li>
        </ul>
      </div>
    </header>
    <!-- /header -->
    <%= yield %>
  </body>
</html>
