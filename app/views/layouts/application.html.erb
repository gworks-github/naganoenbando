<!DOCTYPE html>
<html>
  <head>
    <title>Naganoenbando</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header id="header" class="">
      <div class="" style="height: 100px; width:100%; background-color: gray;">
        <h1><a href="/">長野円盤堂</a></h1>
        <ul class="navbar-nav">
          <li class="p-3"><%= link_to "ログイン", new_customer_session_path %></li>
          <li class="mr-3"><%= link_to "会員登録", new_customer_registration_path %></li>
          <li class="mr-3"><%= link_to "ログアウト", destroy_customer_session_path, method: :delete %></li>
          <li class="mr-3"><%= link_to "カート", carts_index_path %></li>
          <% if current_customer != nil %>
          <li class="mr-3"><%= link_to "マイページ", show_customer_path(current_customer.id) %></li>
          <li class="mr-3"><%= link_to "　　　　　管理者", admin_items_path %></li>
          <% end %>
        </ul>
      </div>
    </header>
    <!-- /header -->
    <%= yield %>
  </body>
</html>
