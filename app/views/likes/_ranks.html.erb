<%# "いいねランキング サイドバー" %>
<section class="like-music">
<% likes_ranks.zip(likes_ranks_count,ranks_number).each do |rank,count,number| %>
<div class="like-m-box">
	<p class="number"><%= number %></p>
  <div class="like-m-image">
	<%= link_to attachment_image_tag(rank, :jacket_image, :fill, 100, 100, format: 'jpeg',fallback: "no_image.png",size: "100x100" ), item_path(rank.id) %>
  </div>
  <div class="like-m-text">
    <p><%=link_to rank.name , item_path(rank.id) %></p>
    <p><%=link_to rank.artist.name , item_path(rank.id) %></p>
    <p>❤️<%= count %></p>
   </div>
</div>
<% end %>
