<div class="container">
  <div class="row">
    <div class="col-md-2">

      <%= form_tag(search_path, method: :get) do %>
          <%= label :artist_id, "アーティスト" %>
          <%= collection_select(:artist, :id, artists_search, :id, :name,:include_blank => '指定なし') %>

          <%= label :label_id, "レーベル" %>
          <%= collection_select(:label, :id, labels_search, :id, :name,:include_blank => '指定なし') %>


          <%= label :genre_id, "ジャンル" %>
          <%= collection_select(:genre, :id, genres_search, :id, :name,:include_blank => '指定なし') %>

          <%= label :name, "タイトル" %>
          <%= text_field_tag :name %>

          <%= submit_tag "検索" %>

      <% end %>
    </div>
  </div>
</div>
