
<div class="search-form">
  <%= form_tag(search_path, method: :get) do %>
    <p class="search_text">アーティスト</p>
    <p class="search_text"><%= collection_select(:artist, :id, artists_search, :id, :name,:include_blank => '指定なし') %></p>
    <p class="search_text">レーベル</p>
    <p class="search_text"><%= collection_select(:label, :id, labels_search, :id, :name,:include_blank => '指定なし') %></p>
    <p class="search_text">ジャンル</p>
    <p class="search_text"><%= collection_select(:genre, :id, genres_search, :id, :name,:include_blank => '指定なし') %></p>
    <p class="search_text">タイトル</p>
    <p class="search_text"><%= text_field_tag :name %></p>
    <p class="search_bottun"><%= submit_tag "検索", class: "btn btn-sm m-0" %></p>
    <% end %>
</div>
