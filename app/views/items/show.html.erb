<div class="container">
    <div class="row">

        <div class="col-lg-3">
            <p class="kensaku">詳細検索</p>
            <%# 検索フォーム %>
            <%= render 'items/item_search', artists_search:@artists_search, labels_search:@labels_search, genres_search:@genres_search %>
            <p class="iine">週間いいねランキング</p>
            <%# いいねランキング %>
            <%= render 'likes/ranks', likes_ranks:@likes_ranks, likes_ranks_count:@likes_ranks_count, ranks_number:@ranks_number %>
        </div>

        <div class="col-lg-4">
            <div class="m-image-show">
                    <%= attachment_image_tag @item, :jacket_image, :fill, 300, 300, format: 'jpeg',fallback: "no_image.png",size: "300x300" %>
            </div>
        </div>


        <div class="col-lg-5">
            <div class="m-text-show">
                <p><h1><%= @item.name %></h1></p>
                <p><h2><%= Artist.find(@item.artist_id).name %></h2></p>
                <p><%= @item.format %></p>
                <p>価格 ： ¥<%= (@item.prices * (Tax.last.rate + 1)).floor %>（税込）</p>
                <p>発売日 ： <%= @item.release_date%></p>
                <p>レーベル ： <%= Label.find(@item.label_id).name %></p>
                <p>ジャンル ： <%= Genre.find(@item.genre_id).name %></p>
                <p><%= @item.is_selling %></p>

                <%= form_for [@item,@cart_item], url: item_carts_path(@item), html: {method: :post} do |f| %>
                           <%= f.select :quantity, options_for_select((1..29).to_a) %>
                            <%#= f.hidden_field :customer_id, :value => current_customer.id %>
                            <%= f.hidden_field :item_id, :value => @item.id %>
                    <%= f.submit "カートへ入れる", class: "btn", style: "color: blue;" %>
                <% end %>

                <% if customer_signed_in? %>
                  <% if @likes.find_by(customer_id: current_customer.id) %>
                    <li>
                      <%= link_to item_likes_path(@item), method: :delete do %>
                        <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                        いいね済
                      <% end %>
                    </li>
                  <% else %>
                    <li>
                      <%= link_to item_likes_path(@item), method: :post do %>
                      <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
                        <i class="fa fa-heart-o" aria-hidden="true"></i>
                        いいねしていない
                      <% end %>
                    </li>
                  <% end %>
                <% else %>
                  <%! "ログインしないといいねボタンが表示されない" %>
                <% end %>
            </div>
        </div>

        <div class="col-lg-9">
            <!-- タブ・メニュー -->
            <ul class="nav nav-tabs">
                <li><a href="#sampleContentA" data-toggle="tab">Disk<%= Disk.find(@item.id).disk_number %></a></li>
                <li><a href="#sampleContentB" data-toggle="tab">Disk<%= Disk.find(@item.id).disk_number+1 %></a></li>
                <li><a href="#sampleContentC" data-toggle="tab">Disk<%= Disk.find(@item.id).disk_number+2 %></a></li>
                <li><a href="#sampleContentD" data-toggle="tab">Disk<%= Disk.find(@item.id).disk_number+3 %></a></li>
            </ul>

        <!-- タブ内容 -->
                        <th>Track.No</th>
                        <th>曲名</th>
            <% @item.disks.each do |disk_number| %>
            <% disk_number.tracks.each do |track_number,name| %>
            <div class="tab-pane active" id="sampleContentA">
                <%= Track.find(Disk.find(@item.id).disk_number).track_number %>
                <%= Track.find(Disk.find(@item.id).disk_number).name %>

            </div>
            <% end %>
            <% end %>
        </div>

    </div>
</div>
