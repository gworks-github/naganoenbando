<h1>商品詳細</h1>

<li>ログインユーザID＝<%= current_customer.id %></li>

	<h4>ジャケット画像</h4>
    <%= attachment_image_tag @item, :jacket_image, :fill, 300, 300, format: 'jpeg' %>

    <h1>タイトル</h1>
    <p><%= @item.name %></p>

    <h3>アーティスト名</h3>
    <p><%= @item.artist_id %></p>

    <h4>シングル/アルバム</h4>
    <p><%= @item.format %></p>

    <h4>価格</h4>
    <p><%= @item.prices %></p>

    <h4>発売日</h4>
    <p><%= @item.release_date%></p>

    <h4>レーベル</h4>
    <p><%= @item.label_id %></p>

    <h4>税率</h4>
    <p><%= @item.tax_id %></p>

    <h4>ジャンル</h4>
    <p><%= @item.genre_id %></p>

    <h4>CDの枚数</h4>
    <%= @item.quantity %>
    <h4>ステータス</h4>
    <p><%= @item.is_selling %></p>




<%= form_for [@item,@cart_item], url: item_carts_path(@item), html: {method: :post} do |f| %>
    <div class="row">
        <div class="col-sm-12">
           <%= f.select :quantity, options_for_select((1..29).to_a) %>
            <%= f.hidden_field :customer_id, :value => current_customer.id %>
            <%= f.hidden_field :item_id, :value => @item.id %>
        </div>
    </div>
    <%= f.submit "カートへ入れる", class: "btn btn-lg mt-20" %>
<% end %>
