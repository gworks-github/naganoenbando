
<h1>商品一覧</h1>

<%= form_tag(items_path, method: :post) do %>
  <%= label :artist_id, "アーティスト" %>
  <%= collection_select(:artist_id, :name, @artists, :artist_id, :name,{}) %>
  <%#= collection_select_tag :artist_id, @items, :name, :artist_id, :include_blank => '指定なし' %>

  <%= label :label_id, "レーベル" %>
  <%= collection_select(:label_id, :name, @labels, :label_id, :name,{}) %>
  <%#= f.collection_select :label_id, @items, :name, :label_id, :include_blank => '指定なし' %>


  <%= label :genre_id, "ジャンル" %>
  <%= collection_select(:genre_id, :name, @genres, :genre_id, :name,{}) %>
  <%#= f.collection_select :genre_id, @items, :name, :genre_id, :include_blank => '指定なし' %>

  <%= label :name, "タイトル" %>
  <%= text_field_tag :name %>
  <%#= f.search_field :name %>

  <%= submit_tag "検索" %>
<% end %>

<% @items.each do |item| %>
 	<!-- <p>ジャケット画像</p> -->
     <p>
     	<%=link_to attachment_image_tag(item, :jacket_image, :fill, 100, 100, format: 'jpeg',fallback: "no_image.png",size: "100x100" ), item_path(item.id) %>
    </p>

    <!-- <p>タイトル</p> -->
    <span>
    	 <%=link_to item.name, item_path(item.id) %>
    </span>

    <!-- <p>アーティスト名</p> -->
    <span>
    	<%=link_to item.artist_id, item_path(item.id) %>
    </span>

    <!-- <p>価格</p> -->
    <span>
    	<%=link_to item.prices, item_path(item.id) %>
    </span>

<% end %>

