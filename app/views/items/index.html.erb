<div class="container">
  <div class="row">
    <div class="col-md-2">

      <!-- 部分テンプレート行う！！！ -->
      <%= form_tag(search_path, method: :get) do %>
          <%= label :artist_id, "アーティスト" %>
          <%= collection_select(:artist, :id, @artists_search, :id, :name,:include_blank => '指定なし') %>

          <%= label :label_id, "レーベル" %>
          <%= collection_select(:label, :id, @labels_search, :id, :name,:include_blank => '指定なし') %>


          <%= label :genre_id, "ジャンル" %>
          <%= collection_select(:genre, :id, @genres_search, :id, :name,:include_blank => '指定なし') %>

          <%= label :name, "タイトル" %>
          <%= text_field_tag :name %>

          <%= submit_tag "検索" %>

      <% end %>
    </div>
  </div>
</div>



<div class="container">
    <h1>商品一覧</h1>
    <table class="table">
        <thead>
            <tr>
                <th>ジャケット</th>
                <th>タイトル</th>
                <th>アーティスト名</th>
                <th>レーベル名</th>
                <th>価格（税込）</th>
            </tr>
        </thead>
         <% @items.each do |item| %>
        <tbody>
            <tr>
                <td><%= link_to attachment_image_tag(item, :jacket_image, :fill, 100, 100, format: 'jpeg',fallback: "no_image.png",size: "100x100" ), item_path(item.id) %></td>
                <td><%= link_to item.name, item_path(item.id) %></td>
                <td><%= link_to Artist.find(item.artist_id).name, item_path(item.id) %></td>
                <td><%= link_to Label.find(item.label_id).name, item_path(item.id) %></td>
                <td><%= (item.prices * (Tax.last.rate + 1)).floor %></td>
            </tr>
        </tbody>
         <% end %>
    </table>
</div>

<%= render 'likes/ranks', likes_ranks:@likes_ranks, likes_ranks_count:@likes_ranks_count, ranks_number:@ranks_number %>
