<%= form_for(@item, url: '/items') do |f| %>
 
    <h4>タイトル</h4>
    <%= f.text_field :name %>
 
    <h4>アーティスト名</h4>
    <%= f.text_area :artist_id %>

     <h4>シングル/アルバム</h4>
    <%= f.text_field :format%>
 
    <h4>ジャケット画像</h4>
    <%= f.text_area :jacket_image %>

     <h4>ジャンル</h4>
    <%= f.text_field :genre_id %>

    <h4>価格</h4>
    <%= f.text_area :prices %>
 
    <h4>レーベル</h4>
    <%= f.text_area :label_id %>

     <h4>CDの枚数</h4>
    <%= f.text_field :quantity %>
 
    <h4>発売日</h4>
    <%= f.text_area :release_date %>

    <h4>ステータス</h4>
    <%= f.text_area :is_selling %>
 
    <%= f.submit '登録' %>
 
<% end %>
