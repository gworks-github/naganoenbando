<div class="container">
	<h1>入荷予定商品一覧</h1>
	<table class="table">
		<thead>
			<tr>
				<th>No</th>
				<th>アイテムID</th>
				<th>ジャケット</th>
				<th>タイトル</th>
				<th>フォーマット</th>
				<th>アーティスト</th>
				<th>レーベル</th>
				<th>ジャンル</th>
				<th>税別金額（円）</th>
				<th>入荷枚数</th>
				<th></th>
			</tr>
		</thead>
		<tbody>

      <%= form_tag(admin_arrived_items_path, method: :post) do %>
        <% @arrived_items.each.with_index(1) do |item,idx| %>
          <%= fields_for "item[]", item do |f| %>
            <tr>
              <td><%= idx %></td>
              <td><%= item.item.id %></td>
              <%= f.hidden_field :item_id, :value => item.item.id %>
              <td><%= item.item.jacket_image_id %></td>
              <td><%= item.item.name %></td>
              <td><%= item.item.format %></td>
              <td><%= item.item.artist.name %></td>
              <td><%= item.item.label.name %></td>
              <td><%= item.item.genre.name %></td>
              <td><%= item.item.prices %></td>
              <td><%= f.number_field :quantity %></td>
              <td><%= link_to "削除", admin_ready_item_path(item.item.id), method: :delete %></td>
            </tr>
    </tbody>
  <% end %>
<% end %>
  </table>
  <br>
  <div class="container">
    <div class="row">
      <div class='col-sm-6'>
        <div class="form-group">
          <div class='input-group date datetimepicker' id='datetimepicker2'>
            <%= text_field_tag :date, nil, {class: "form_control"} %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%= submit_tag "登録" %>

<% end %>
