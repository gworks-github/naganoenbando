<div class="container">
<div style="width:50%">
  
<h1 class="page-title">情報編集</h1>

<%= form_for(@customer, url: admin_customer_path, method: :put) do |f| %>


<table class="table">
  <tbody>
    <tr>
      <th>姓</th>
      <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></td>
    </tr>
    <tr>
      <th>名</th>
      <td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></td>
    </tr>
    <tr>
      <th>セイ</th>
      <td><%= f.text_field :last_furigana, autofocus: true, autocomplete: "last_furigana" %></td>
    </tr>
    <tr>
      <th>メイ</th>
      <td><%= f.text_field :first_furigana, autofocus: true, autocomplete: "first_furigana" %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= f.text_field :address, autofocus: true, autocomplete: "address", style: "width: 300px" %></td>
    </tr><tr>
      <th>メールアドレス</th>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 300px" %></td>
    </tr>
  </tbody>
</table>

<%= f.submit "更新", class: "btn btn-sm" %>
<%= link_to "キャンセル", :back, class: "btn btn-sm" %>
<% end %>
</div>
</div>
<div class="page-under-space-100"></div>
