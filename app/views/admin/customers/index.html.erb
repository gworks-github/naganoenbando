<div class="container">
    <h1>顧客一覧</h1>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>名前</th>
                <th>郵便番号</th>
                <th>住所</th>
                <th>メールアドレス</th>
            </tr>
        </thead>
         <% @customers.each do |cust| %>
        <tbody>
            <tr>
                <td><%= link_to cust.id , admin_customer_path(cust.id)%></td>
                <td><%= "#{cust.last_name} #{cust.first_name}" %></td>
                <td><%= cust.post_code %></td>
                <td><%= cust.address %></td>
                <td><%= cust.email %></td>
            </tr>
        </tbody>
         <% end %>
    </table>
</div>
