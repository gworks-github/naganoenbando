
      <div class="container"><!-- 本体 -->
        <div class="row">
          <div class="col-md-2">

            <%= form_tag(admin_customers_search_path, method: :get) do %>

                <%= label :last_name, "姓" %>
                <%= text_field_tag :last_name %>

                <%= label :first_name, "名" %>
                <%= text_field_tag :first_name %>

                <%= label :address, "住所" %>
                <%= text_field_tag :address %>

                <%= label :phone_number, "電話番号" %>
                <%= text_field_tag :phone_number %>

                <%= label :email, "メールアドレス" %>
                <%= text_field_tag :email %>

                <%= submit_tag "検索", :name => nil %>

            <% end %>
          </div>
        </div>
      </div>

      <div class="container">
          <h1>顧客一覧</h1>
          <table class="table">
              <thead>
                  <tr>
                      <th>ID</th>
                      <th>名前</th>
                      <th>郵便番号</th>
                      <th>住所</th>
                      <th>メールアドレス</th>
                  </tr>
              </thead>
               <% @customers.each do |cust| %>
              <tbody>
                  <tr>
                      <td><%= link_to cust.id , admin_customer_path(cust.id)%></td>
                      <td><%= "#{cust.last_name} #{cust.first_name}" %></td>
                      <td><%= cust.post_code %></td>
                      <td><%= cust.address %></td>
                      <td><%= cust.email %></td>
                  </tr>
              </tbody>
               <% end %>
          </table>

