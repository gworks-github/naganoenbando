
      <div class="container">
      <h1 class="page-title">顧客一覧</h1>
      <%= form_tag(admin_customers_search_path, method: :get) do %>
      <table class="table">
        <tbody>
          <tr>
            <th>名前　姓</th>
            <td> <%= text_field_tag :last_name %></td>
            <td></td>
          </tr>
          <tr>
            <th>名前　名</th>
            <td><%= text_field_tag :first_name %></td>
            <td></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= text_field_tag :address %></td>
            <td></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= text_field_tag :phone_number %></td>
            <td></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= text_field_tag :email %></td>
            <td><%= submit_tag "検索", :name => nil, class: "btn btn-sm" %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
      </div>

      <div class="container">
          <table class="table">
              <thead>
                  <tr>
                      <th>ID</th>
                      <th>名前</th>
                      <th>メールアドレス</th>
                      <th>郵便番号</th>
                      <th>住所</th>
                  </tr>
              </thead>
               <% @customers.each do |cust| %>
              <tbody>
                  <tr>
                      <td><%= cust.id %></td>
                      <td><%= "#{cust.last_name} #{cust.first_name}" %></td>
                      <td><%= link_to cust.email, admin_customer_path(cust.id) %></td>
                      <td><%= cust.post_code %></td>
                      <td><%= cust.address %></td>
                  </tr>
              </tbody>
               <% end %>
          </table>

